<!-- AUTONOMY FOR WIRE PERCHING -->
<!-- Uses wire perception (detection + tracking), wire approach planner, and perch behavior -->
<launch>

  <!-- Interface -->
  <include
    file="$(find-pkg-share $(env INTERFACE_LAUNCH_PACKAGE))/launch/$(env INTERFACE_LAUNCH_FILE)" />

  <!-- Sensors -->
  <include file="$(find-pkg-share $(env SENSORS_LAUNCH_PACKAGE))/launch/$(env SENSORS_LAUNCH_FILE)" />

  <!-- Perception - with wire detection and tracking -->
  <include
    file="$(find-pkg-share perception_bringup)/launch/perception_wire.launch.xml" />

  <!-- Local - with wire approach planner -->
  <include file="$(find-pkg-share local_bringup)/launch/local_wire.launch.xml" />

  <!-- Global -->
  <include file="$(find-pkg-share $(env GLOBAL_LAUNCH_PACKAGE))/launch/$(env GLOBAL_LAUNCH_FILE)" />

  <!-- Behavior -->
  <include
    file="$(find-pkg-share $(env BEHAVIOR_LAUNCH_PACKAGE))/launch/$(env BEHAVIOR_LAUNCH_FILE)" />


</launch>
